<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Home</title>
  <link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
</head>
<body>
  
  <section>
  <div class="container mt-5">
    <div class="mt-5">
        <a href="/admin/add-category" class="btn btn-success mb-3">Add Category</a>
    </div>
    <table class="table" id="myTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Category name</th>
          <th scope="col">Description</th>
          <th scope="col"></th>
       

        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <th scope="row">{{addOne @index}}</th>
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
          
            <td><a href="/admin/edit-category/{{this._id}}" class="btn btn-success">Edit</a>
            <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger delete"  >Delete</a>  
            </td>
           
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready( function () {
    $('#myTable').DataTable();
} );
    </script>
</body>
</html>

<script>
  $(".delete").on("click",function(e){
    e.preventDefault()
    var self=$(this)
    Swal.fire({
  title: 'Do you want to delete this product?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
    
    location.href=self.attr("href")
  }
})

  })

</script>