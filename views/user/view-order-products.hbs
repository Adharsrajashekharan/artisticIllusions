
        <section>
                <div class="row m-3">
                    {{#each products}}
                    <div class="col-md-3">
                        <div class="card m-auto" style="width: 18rem;">
                            <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="Card image cap">
                            <div class="card-body">
                                <h5 style="margin-left:26% ;" class="card-title">{{this.product.name}}</h5>
                                <p class="card-text"> {{this.product.price}}</p>
                                 <p class="card-text"> {{this.product.quantity}}</p>
                                  <p class="card-text"> {{this.product.description}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
    </div>

    </section>